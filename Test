public class Test {

	public static void main(String[] args) {
		
		int A = 5;
		int B = 9;
		double C = 2.5;
		double D = 3.6;
		boolean E = true;
		boolean F = false;
		
		System.out.println("Variables y operaciones");
		System.out.println("***********************");
		
		System.out.println("Enteros \n(+) " + A+B);
		System.out.println("(-) " + (A-B));
		System.out.println("(*) " + A*B);
		System.out.println("(/) " + A/B);
	    System.out.println("\n");
	    
	    System.out.println("1.- " + (B+=2));
	    System.out.println("2.- " + (A-=3));
	    System.out.println("3.- " + (B-=3));
	    System.out.println("4.- " + (A+=2));
	    System.out.println("5.- " + (A/=2));
	    System.out.println("6.- " + (B/=2));
	    System.out.println("\n");
	    
	    System.out.println("Doubles \n1.(+) " + C+D);
		System.out.println("2.(-) " + (C-D));
		System.out.println("3.(*) " + C*D);
		System.out.println("4.(/) " + C/D);
	    System.out.println("\n");

	    System.out.println("1.- " + (C+=2));
	    System.out.println("2.- " + (D-=3));
	    System.out.println("3.- " + (C-=3));
	    System.out.println("4.- " + (D+=2));
	    System.out.println("5.- " + (C/=2));
	    System.out.println("6.- " + (D/=2));
	    System.out.println("\n");
	    
	    
	}

}
